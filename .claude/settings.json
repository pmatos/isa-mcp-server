{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(uv init:*)",
      "Bash(uv add:*)",
      "Bash(uv run:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(sqlite3:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "mcp__context7"
    ],
    "defaultMode": "plan"
  },
  "enableAllProjectMcpServers": true,
  "model": "claude-sonnet-4.5",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/post_edit_hook.sh"
          }
        ]
      }
    ]
  }
}

